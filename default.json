{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone"
  ],
  "dependencyDashboard": true,
  "schedule": [
    "after 4am and before 7am on saturday"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "extends": "packages:linters",
      "groupName": "linters",
      "automerge": true
    },
    {
      "extends": "packages:jsUnitTest",
      "groupName": "unit test packages",
      "automerge": true
    }
  ]
}
